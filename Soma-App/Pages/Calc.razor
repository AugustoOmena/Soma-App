<body>
    <!-- Soma.razor -->
    <h3>Calculadora de Soma</h3>

    <div>
        <label for="numero1">Número 1:</label>
        <input id="numero1" @bind="numero1" type="number" />

        <label for="numero2">Número 2:</label>
        <input id="numero2" @bind="numero2" type="number" />

        <button @onclick="CalcularSoma">Calcular Soma</button>
        <button @onclick="CalcularSubtracao">Calcular Subtração</button>
        <button @onclick="CalcularMultip">Calcular Multiplicação</button>
        <button @onclick="CalcularDiv">Calcular Divisão</button>

        <h1>Resultado é: @resultado</h1>
    </div>

    @code {
        private int numero1;
        private int numero2;
        private int resultado;

        private void CalcularSoma()
        {
            resultado = numero1 + numero2;
        }

        private void CalcularSubtracao()
        {
            resultado = numero1 - numero2;
        }

        private void CalcularMultip()
        {
            resultado = numero1 * numero2;
        }

        private void CalcularDiv()
        {
            resultado = numero1 / numero2;
        }
    }
</body>




